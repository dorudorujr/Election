<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.g015c1308.election2.LargeRegion">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/japan" />

        <Button
            android:id="@+id/hokaidou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北海道"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="193dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/touhoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:layout_marginTop="32dp"
            android:text="東北"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintRight_toRightOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/hokaidou" />

        <Button
            android:id="@+id/koushinetuhokuriku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北陸・甲信越"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/touhoku" />

        <Button
            android:id="@+id/kantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:layout_marginTop="16dp"
            android:text="関東"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/koushinetuhokuriku" />

        <Button
            android:id="@+id/toukai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:layout_marginTop="8dp"
            android:text="東海"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kantou" />

        <Button
            android:id="@+id/tyuugoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="72dp"
            android:text="中国"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintRight_toLeftOf="@+id/koushinetuhokuriku"
            app:layout_constraintTop_toBottomOf="@+id/hokaidou" />

        <Button
            android:id="@+id/kansai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="関西"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintTop_toBottomOf="@+id/tyuugoku"
            app:layout_constraintRight_toLeftOf="@+id/kantou"
            android:layout_marginRight="43dp" />

        <Button
            android:id="@+id/shikoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="四国"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintTop_toBottomOf="@+id/kansai"
            app:layout_constraintRight_toLeftOf="@+id/toukai"
            android:layout_marginRight="43dp" />

        <Button
            android:id="@+id/kyusyuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="168dp"
            android:layout_marginRight="18dp"
            android:text="九州"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.RaisedButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/shikoku" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
